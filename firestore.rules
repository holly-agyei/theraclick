rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Users can only read/write their own profile + subcollections.
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      match /aiThreads/{threadId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
        match /messages/{messageId} {
          allow read, write: if isSignedIn() && request.auth.uid == userId;
        }
      }
    }

    // Direct messages - users can read/write if they are a participant
    match /directMessages/{chatId} {
      allow read, write: if isSignedIn() && (
        request.auth.uid in resource.data.participants ||
        request.auth.uid in request.resource.data.participants
      );
      
      match /messages/{messageId} {
        allow read, write: if isSignedIn() && (
          request.auth.uid in get(/databases/$(database)/documents/directMessages/$(chatId)).data.participants
        );
      }
    }

    // Forums - all authenticated users can read/write
    match /forums/{forumId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
      
      match /messages/{messageId} {
        allow read, write: if isSignedIn();
        
        match /replies/{replyId} {
          allow read, write: if isSignedIn();
        }
      }
    }

    // Bookings - users can read their own bookings, counselors can read their bookings
    match /bookings/{bookingId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.studentId ||
        request.auth.uid == resource.data.counselorId
      );
      allow create: if isSignedIn() && (
        request.auth.uid == request.resource.data.studentId ||
        request.auth.uid == request.resource.data.counselorId
      );
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.studentId ||
        request.auth.uid == resource.data.counselorId
      );
    }

    // Calls - WebRTC signaling
    match /calls/{callId} {
      // Allow read if user is caller or receiver
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.callerId ||
        request.auth.uid == resource.data.receiverId
      );
      
      // Allow create if user is the caller (creating a new call)
      allow create: if isSignedIn() && (
        request.auth.uid == request.resource.data.callerId
      );
      
      // Allow update/delete if user is caller or receiver
      allow update, delete: if isSignedIn() && (
        request.auth.uid == resource.data.callerId ||
        request.auth.uid == resource.data.receiverId
      );
      
      match /signals/{signalId} {
        allow read, write: if isSignedIn() && (
          request.auth.uid == get(/databases/$(database)/documents/calls/$(callId)).data.callerId ||
          request.auth.uid == get(/databases/$(database)/documents/calls/$(callId)).data.receiverId
        );
      }
    }
  }
}

