rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload their own profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      // Users can only upload to their own folder
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload and read voice messages
    match /voice-messages/{chatId}/{senderId}/{fileName} {
      // Anyone authenticated can read voice messages (for receivers)
      allow read: if request.auth != null;
      // Users can only upload to their own sender folder
      allow write: if request.auth != null && request.auth.uid == senderId;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
